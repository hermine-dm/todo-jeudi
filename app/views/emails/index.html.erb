<h1 class="text-center mb-4">Welcome to your email box</h1>
<div class="text-center my-3 ">
	<%= form_tag(emails_path, method: "post", class: "form", remote: true)  do %>
		<%= submit_tag("Recevoir un email", class: "btn btn-start-order") %>
    <%end%>
</div>
<div class="container row m-auto pb-5">
	<div class="col-4 pr-0 ">
	    <ul id="email-list">
	    	<li class="row border bg-secondary pl-3 pt-2 text-light">
	  			<h5> Liste des emails  </h5>
	  		</li>
	      	<% @emails.each do |email|  %>
		      	<li class="row border pl-3" id="<%= email.id%>">
		      		<% if email.read == true %> 
		        		<%= link_to "#{email.object}", email_path(email.id), remote: true, :class => "text-secondary"%>
		        	<%else%>
		        		<%= link_to "#{email.object}", email_path(email.id), remote: true, :class => "text-secondary font-weight-bold"%>
		        	<%end%>
				</li>
	      	<% end %>
	    </ul>
	</div>
	<div class="col-8 pl-0 ">
		<ul>
	    	<li class="row border bg-secondary pl-3 pt-2 text-light">
	  			<h5> Email selectionn√©  </h5>
	  		</li>
	  		<li class="row pl-3" id="content-email">
	  			
			</li>
	      	
	    </ul>
	</div>
</div>
