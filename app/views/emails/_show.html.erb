<div class="container pt-2">
	<h13 class=""> <strong>Object :</strong> <%= email.object %> </h1>
	<div class=""> <strong>Content :</strong> <%= email.body %> </div>
	<div class="pt-2"> 
	    <%= link_to 'Supprimer', email_path(email.id), remote: true, data: {:confirm => 'Are you sure?'}, :method => :delete, :class => "btn btn-primary"  %> 
	    	<button class="btn btn-outline-primary"> 
	    	  <% if email.read == true %>
	    		<%= link_to "Marquer comme non-lu", email_path(email.id), remote: true, method: 'PATCH'%> 
	    	  <%else%>
	    		<%= link_to "Marquer comme lu", email_path(email.id), remote: true, method: 'PATCH'%> 
	    	  <%end%>
	    	</button>
	</div>  
</div>